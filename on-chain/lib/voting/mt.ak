  let pig = @"pig"
  let bull = @"bull"

  let serialise_fn = create_string_item_serialise_fn()

  let items = [dog, cat, mouse, horse, pig, bull]
  let mt = from_list(items, serialise_fn)

  let item = pig
  let rh = root_hash(mt)

  member_from_tree(
    item: item,
    root_hash: rh,
    tree: mt,
    serialise_fn: serialise_fn,
  )
}

