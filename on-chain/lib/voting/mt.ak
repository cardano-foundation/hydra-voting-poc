fn get_proof_item_value(proof_item: ProofItem) -> Hash<Sha2_256, ByteArray> {
  when proof_item is {
    Left(x) -> x
    Right(y) -> y
  }
}

// needed only for tests
fn create_string_item_serialise_fn() -> fn(String) -> Hash<Sha2_256, String> {
  fn(x: String) { from_string(x) }
}
