pub fn member_from_tree(
  item: a,
  root_hash: Hash<Sha2_256, ByteArray>,
  tree: MerkleTree<a>,
  serialise_fn: fn(a) -> Hash<Sha2_256, a>,
) -> Bool {
  let proof: Option<Proof> = get_proof(tree, item, serialise_fn)
  when proof is {
    Some(p) -> member(item, root_hash, p, serialise_fn)
    None -> False
  }
}

